{
  "name": "bot-data-service",
  "version": "1.0.0",
  "private": true,
  "description": "Data synchronization service for TeAlquilamos WhatsApp Bot - handles multiple data sources (Beds24, Whapi, etc.)",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start": "npm run build && node dist/main.js",
    "build": "npx tsc -p tsconfig.json",
    "db:generate": "prisma generate --schema ../prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema ../prisma/schema.prisma",
    "db:studio": "prisma studio --schema ../prisma/schema.prisma",
    "test": "vitest --config vitest.config.ts",
    "backfill": "tsx scripts/backfill.ts",
    "sync:cancelled": "tsx scripts/backfill.ts -- --type cancelled",
    "sync:leads": "tsx scripts/backfill.ts -- --type leads",
    "monitor": "tsx scripts/monitor.ts",
    "monitor:continuous": "tsx scripts/monitor.ts -- --continuous",
    "monitor:json": "tsx scripts/monitor.ts -- --format json"
  },
  "dependencies": {
    "@bull-board/express": "^6.12.0",
    "@prisma/client": "^6.14.0",
    "axios": "^1.7.2",
    "bullmq": "^5.57.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-prom-bundle": "^8.0.0",
    "ioredis": "^5.7.0",
    "pino": "^9.4.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "shx": "^0.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8",
    "typescript": "^5.5.4",
    "prisma": "^6.14.0"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "tsx": "^4.16.2",
    "vitest": "^2.0.5"
  }
}
